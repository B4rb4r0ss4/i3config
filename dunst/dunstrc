[global]
    ### Display ###

    # Which monitor should the notifications be displayed on.
    monitor = 0

    follow = mouse
    geometry = "300x60-15+46"

    # Show how many messages are currently hidden (because of geometry).
    indicate_hidden = yes

    # Shrink window if it's smaller than the width.  Will be ignored if
    # width is 0.
    shrink = yes

    transparency = 0

    notification_height = 0

    separator_height = 2

    padding = 8

    horizontal_padding = 8

    frame_width = 3

    frame_color = "#3B4252"

    separator_color = frame

    # Sort messages by urgency.
    sort = yes

    idle_threshold = 120

    ### Text ###

    font = DejaVu Sans Mono 10

    # The spacing between lines.  If the height is smaller than the
    # font height, it will get raised to the font height.
    line_height = 0

    markup = full

    format = "<b>%s</b>\n%b"

    alignment = left

    show_age_threshold = 60

    word_wrap = yes

    ellipsize = middle

    ignore_newline = no

    stack_duplicates = true

    hide_duplicate_count = false

    show_indicators = yes

    ### Icons ###
    icon_position = left
    max_icon_size = 32
    icon_path = ~/.icons/Breeze-Nord-Dark-Icons/apps/64/:~/.icons/Breeze-Nord-Dark-Icons/devices/64/

    ### History ###

    sticky_history = yes
    history_length = 20

    ### Misc/Advanced ###

    # dmenu path.
    dmenu = /usr/bin/dmenu -p dunst:

    # Browser for opening urls in context menu.
    browser = /usr/bin/firefox -new-tab

    # Always run rule-defined scripts, even if the notification is suppressed
    always_run_script = true

    # Define the title of the windows spawned by dunst
    title = Dunst

    # Define the class of the windows spawned by dunst
    class = Dunst

    startup_notification = false

    verbosity = mesg

    force_xinerama = false
# Closing by mouse
    mouse_left_click = close_current
    mouse_middle_click = do_action
    mouse_right_click = close_all

[experimental]
    per_monitor_dpi = false

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+grave

[urgency_low]
    frame_color = "#E5E9F0"
    background = "#3B4252"
    background = "#2E3440"
    timeout = 10
    icon = ~/.config/dunst/images/notification.png

[urgency_normal]
    frame_color = "#3B4252"
    foreground = "#E5E9F0"
    background = "#2E3440"
    timeout = 10
    icon = ~/.config/dunst/images/notification.png

[urgency_critical]
    frame_color = "#3B4252"
    foreground = "#E5E9F0" #EBCB8B #B48EAD #BF616A  #E5E9F0  #E5E9F0  #EBCB8B #88C0D0
    background = "#2E3440"
    timeout = 0
    icon = ~/.config/dunst/images/notification.png
